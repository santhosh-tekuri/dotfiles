(defcfg
    process-unmapped-keys yes
)

(defsrc)

(defvar
    tt 300
    ht 300
)

(deftemplate mod (orig new)
    $orig (tap-hold-release $tt $ht $orig $new)
)

(deflayermap (base)
    (t! mod f lctrl)
    (t! mod j rctrl)
    (t! mod s lalt)
    (t! mod l ralt)
    (t! mod d lsft)
    (t! mod k rsft)
    caps (tap-hold-press $tt $ht
        (caps-word 5000)
        (layer-while-held arrows)
    )
    lmet (tap-hold $tt $ht C-b lmet)
    fn (tap-hold 250 250 fn (layer-toggle fn))
)

(deflayermap (arrows)
    h left
    j down
    k up
    l right
)

(deflayermap (fnkeys)
    f1 brup
    f2 brdn
    f3 mctl
    f4 sls
    f5 dtn
    f6 dnd
    f7 prev
    f8 pp
    f9 next
    f10 mute
    f11 voldwn
    f12 volu
)
