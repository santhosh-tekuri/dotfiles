{
    "workbench.colorCustomizations": {
        "[Default Dark+]": {
            "editorInlayHint.background": "#1a1a1a",
            "editorInlayHint.foreground": "#525252",
            "editorInlayHint.parameterBackground": "#1a1a1a",
            "editorInlayHint.parameterForeground": "#525252",
            "editorInlayHint.typeBackground": "#1a1a1a",
            "editorInlayHint.typeForeground": "#525252",
        }
    },
    "editor.fontSize": 16,
    "window.zoomLevel": 1,
    "errorLens.messageTemplate": "$severity $message.",
    "errorLens.severityText": [
        "◼︎",
        "◼︎",
        "◼︎",
        "◼︎"
    ],
    "editor.minimap.autohide": true,
    "editor.fontFamily": "'Cascadia Code ExtraLight', 'Anonymous Pro', Menlo, Monaco, 'Courier New', monospace",
    "errorLens.messageBackgroundMode": "none",
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.formatOnSave": true,
    "terminal.integrated.fontSize": 16,
    "editor.suggest.insertMode": "replace",
    "editor.formatOnType": true,
    "editor.semanticTokenColorCustomizations": {
        "rules": {
            "variable": {
                "fontStyle": "underline"
            },
            "*.consuming": {
                "fontStyle": "underline",
            },
            "*.reference": {
                "fontStyle": "",
            },
            "*.mutable": {
                // "fontStyle": ""
                "foreground": "#228b22",
            },
            "*.trait": {
                "fontStyle": "italic"
            }
        }
    },
    "editor.fontLigatures": true,
    // "editor.fontWeight": "300",
}