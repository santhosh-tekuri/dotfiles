#!/usr/bin/env bash

# author: Santhosh Kumar Tekuri
#
# this script colors stdin based on pattern match
# usage: 
#      color [<pattern> <color>]*
# example: 
#      color WARN magenta ERROR red
# if no arguments passed, it assumes: WARN magenta SEVERE red ERROR red

if [ $# -eq 0 ]; then
    set -- WARN magenta SEVERE red ERROR red
fi

none=0
black=30
red=31
green=32
yellow=33
blue=34
magenta=35
cyan=36
white=37

while read; do
    color=none
    for i in `seq 1 2 $#`; do
        if echo $REPLY | grep "${!i}" > /dev/null; then
            j=`expr $i + 1`
            color=${!j}
            break
        fi
    done
    echo -e "\033[${!color}m$REPLY\033[0m"
done
