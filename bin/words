#!/usr/bin/env bash

n=50

set -Eeo pipefail

caps=none
n=50
symbols=""
lang=english

usage=$(cat <<EOF
Usage: words [options...] <source>

-n <num-words>      number of words (default 50)
                    or line-range in sed syntax, ex: 20,90
-c                  captalize words randomly
-C                  capitalize all words
-p                  add punctuation
-s                  add symbols
-d                  add digits
-x <symbols>        add given symbols
-h                  show this help

<source> can be:
    any monkeytype language
    keybr
    <two-letters>.pair
    os (from /usr/share/dict/words)
    ngrams1, ngrams2, ngrams3, ngrams4
    - (from stdin)
    misspelled
defaults to english
EOF
)

while getopts ":hn:cCpsdx:" opt; do
    case $opt in
    \?) # Invalid option
        >&2 echo "Error: Invalid option -$OPTARG"
        >&2 echo "$usage"
        exit 2
        ;;
    :) # Missing argument for an option
        >&2 echo "Error: Option -$OPTARG requires an argument"
        >&2 echo "$usage"
        exit 2
        ;;
    h)
        echo "$usage"
        exit 0
        ;;
    n)
        n="$OPTARG"
        ;;
    c)
        caps=rand
        ;;
    C)
        caps=all
        ;;
    p)
        symbols=",.-?!:;'\"()"
        ;;
    s)
        symbols='`~!@#$%^&*()-_=+[{}];":,<.>/?\\|'\'
        ;;
    d)
        digits=1234567890
        ;;
    x)
        symbols="$OPTARG"
        ;;
    esac
done
symbols+="$digits"

shift $((OPTIND - 1))
if (($#>0)); then
    lang="$1"
fi
dir=~/.local/share/typist/words
file="$dir/$lang"
mkdir -p "$dir"

case "$lang" in
-)
    cat | tr '\n' ' ' | awk '{$1=$1};1'
    exit
    ;;
os)
    file="/usr/share/dict/words"
    ;;
misspelled)
    ;;
*.pair)
    if [ ! -f "$file" ]; then
        >&2 echo downloading "$lang"
        if ! curl -sS --fail https://www.pairtype.com/data/corpus/"${lang%.pair}".json | jq -r '.[]' > "$file"; then
            rm "$file"
            exit 1
        fi
    fi
    ;;
keybr)
    if [ ! -f "$file" ]; then
        >&2 echo downloading "$lang"
        if ! curl -sS --fail https://raw.githubusercontent.com/aradzie/keybr.com/refs/heads/master/packages/keybr-content-words/lib/data/words-en.json | jq -r '.[]' > "$file"; then
            rm "$file"
            exit 1
        fi
    fi
    ;;
ngrams*)
    if [ ! -f "$file" ]; then
        >&2 echo downloading "$lang"
        if ! curl -sS --fail https://raw.githubusercontent.com/KaranAgarwalla/Encryption-Decryption/refs/heads/master/"$lang".txt | awk '{print tolower($1)}' > "$file"; then
            rm "$file"
            exit 1
        fi
    fi
    ;;
*)
    if [ ! -f "$file" ]; then
        >&2 echo downloading "$lang"
        if ! curl -sS --fail https://raw.githubusercontent.com/monkeytypegame/monkeytype/refs/heads/master/frontend/static/languages/"$lang".json | jq -r '.words[]' > "$file"; then
            rm "$file"
            exit 1
        fi
    fi
    ;;
esac

nwords() {
    if [[ "$n" == *,* ]]; then
        sed -n "${n}p" "$file" | shuf
    else
        # repeat words only when the #words is not enough
        lines=$(grep -c "" "$file") # grep counts last line always
        ((loop=n/lines))
        if ((loop>0)); then
            for i in $(seq 1 $((n/lines))); do
                shuf -n "$n" "$file"
            done
        fi
        ((n=n%lines))
        if ((n>0)); then
            shuf -n "$n" "$file"
        fi
    fi
}

first=true
while IFS='' read -r word; do
    if [ $caps == "all" ] || ( [ $caps == "rand" ] && (( RANDOM % 2 == 1 ))); then
        word=$(echo "${word:0:1}" | tr '[:lower:]' '[:upper:]')${word:1}
    fi
    if [ "$symbols" != "" ] && (( RANDOM % 2 == 1)); then
        i=$(( RANDOM % ${#symbols} ))
        ch="${symbols:i:1}"
        case "$ch" in
        "&"|"@"|"#"|"("|"{"|'['|'<')
            word=" $ch$word"
            ;;
        "_")
            word="_$word"
            ;;
        "-")
            word=" - $word"
            ;;
        \`|"'"|"\"")
            word=" $ch$word$ch"
            ;;
        *)
            word=" $word$ch"
            ;;
        esac
    else 
        word=" $word"
    fi
    if [ "$first" == "true" ]; then
        first=false
        echo -n "${word:1}"
    else
        echo -n "${word}"
    fi
done < <(nwords)
